<h2><%= @task.title %></h2>
<p class="description"><%= @task.details %></p>

<span>
  <input type="checkbox" <%= @task.completed ? "checked" : "" %> > 
  <%= @task.completed ? "This task is completed" : "This task is yet to be done" %>
</span>

<%= link_to "Delete", task_path(@task.id),  class:"delete",
      method: :delete,
      data: { confirm: "Are you sure?" } %>

<%= link_to 'Edit this task', edit_path%>




